<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">
  <persistence-unit name="veristorePU" transaction-type="JTA">
    <!-- Let Payaraâ€™s default provider handle it, or explicitly set EclipseLink: -->
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

    <jta-data-source>jdbc/veristoreDS</jta-data-source>

    <properties>
      <!-- Use the JPA-standard generator -->
      <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
      <!-- EclipseLink niceties -->
      <property name="eclipselink.logging.level" value="FINE"/>
      <property name="eclipselink.target-server" value="Payara"/>
    </properties>
  </persistence-unit>
</persistence>
